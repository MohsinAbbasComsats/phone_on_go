
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/Dashboard")
    @Styles.Render("~/Content/AppV2")
    @Styles.Render("~/Content/AndroidTabs")
    @Styles.Render("~/Content/fonts")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("Scripts", false)

    <style type="text/css">
        .no-padding {
            padding: 0px !important;
        }

        .no-margin {
            margin: 0px !important;
        }

        .active-Toolbar {
            background-color: #d3f7f5;
        }
</style>
    
    <style type="text/css">
        @RenderSection("Styles", false)
    </style>
</head>
<body style="/*margin-left:auto;margin-right:auto;width:90%;*/">
    @{
        Html.RenderAction("Header", "Master");
        Html.RenderAction("LeftNavigation", "Master");

    }
    <section id="content" data-content="@ViewBag.selected">
       <!-- <section class="main padder">   -->
            <div class="row">
                @if (ViewBag.selected != null && ViewBag.selected == "Dashboard")
                {
                    //don't show toolbar

                }
                else
                {
                    <div class="col-lg-12" style="padding-left: 100px;padding-right: 0px;padding-top: 10px;padding-bottom: 10px;margin-bottom: 0px;">
                        @{
                            Html.RenderAction("ToolBar", "Master");
                            //Html.RenderPartial("ToolBar");
                         }
                    </div>
                            }
                <div class="col-lg-12 no-margin" style="background-color:white;padding-left:90px;padding-right:0px;">
                    @RenderBody()
                </div>
            </div>            
      <!-- </section>   -->
    </section>
</body>

</html>
